<%= f.fields_for :ingredients do |ff| %>
  <div>
    <%= ff.label :name %>
    <%= ff.text_field :name %>

    <%= ff.label :quantity %>
    <%= ff.text_field :quantity, value: "#{ff.object.quantity_for_recipe(f.object.id)}" %>
    <%= link_to "", [f.object, ff.object], method: :delete, class: "glyphicon glyphicon-remove btn btn-large btn-danger"%>
  </div>
<% end %>
