<div class="row">
  <div class="main">
    <header class="jumbotron hero-spacer">
      <h1>Recipe Manager!</h1>
      <p>A simple recipe management app!</p>
      <p><%= link_to 'Add New Recipe', new_recipe_path, class: "btn btn-primary btn-large" %></p>
    </header>
    <div class="row">
      <div class="col-lg-12">
        <h3>Latest Recipes</h3>
      </div>
    </div>
    <div class="row text-center">
      <% @recipes.each do |recipe| %>
      <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
          <img src="http://placehold.it/800x500" alt="">
          <div class="caption">
            <h3><%= recipe.name %></h3>

            <p><%= truncate(recipe.description, length:15) %>.</p>
            <p>
              <%= link_to 'Instructions', recipe_path(recipe), class: "btn btn-primary" %>
            </p>
          </div>
        </div>
      </div>

      <% end %>
    </div>

  </div>
</div>
